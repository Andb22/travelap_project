<form method="POST" action="/cities_search">
<div >
  <input required type="text" name="name" minlength="3" id="city_name"/>
  <input type="submit" value="Search for city"/>
</div>
</form>

<h1 class="logo">Cities in <%= @country.name.capitalize %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>|</th>
    <th>visited</th>
  </tr>
  <%city_list = @country.cities  %>
<% city_list.each do |city| %>
<tr>
  <td><%= city.name.capitalize %></td>
  <td>|</td>
  <td><% if (city.visited) == "t" %>
          <p>Yes</p>
          <%end%>
          <% if city.visited == "f"%>
          <p>Not yet</p>
          <%end%>
  </td>
  <td>|</td>
  <td><a href="/cities/<%= city.id  %>/notvisited_edit"> Edit city</a></td>
  <td>|</td>
  <td><a href="/cities/<%= city.id  %>/edit_notvisited_site"> Tourist Sites in city</a></td>
</tr>
  <% end %>
</table>

<div class="form-wrap">
  <a href='/cities/new_notvisited_city/<%= @country.id %>'>Add new City</a>
</div>
