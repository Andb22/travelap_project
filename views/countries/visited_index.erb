<form method="POST" action="/countries_search">
<div >
  <input required type="text" name="name" minlength="3" id="country_name"/>
  <input type="submit" value="Search for country"/>
</div>
</form>


<h1 class="heading">VISITED COUNTRY LIST</h1>

<table class="tables">
  <%@visited_countries.each do |country| %>
  <tr>
  <td> <%= country.name.capitalize %></td>
  <td><a href="/countries/visited/<%= country.id  %>/edit"> Edit country</a></td>
  <td><a href="/countries/visited/<%= country.id  %>" >  Cities in <%= country.name.capitalize %></a></td>
</tr>
  <% end %>
</table>
