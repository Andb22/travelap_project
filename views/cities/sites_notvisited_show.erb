<h1 class="heading">Tourist Sites in <%= @city.name.capitalize %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>|</th>
    <th>visited</th>
  </tr>
  <%site_list = @city.sites  %>
<% site_list.each do |site| %>
<tr>
  <td><%= site.name.capitalize %></td>
  <td>|</td>
  <td><% if (site.visited) == "t" %>
          <p>Yes</p>
          <%end%>
          <% if (site.visited) == "f"%>
          <p>Not yet</p>
          <%end%>
    </td>
  </tr>
  <%end%>
</table>

<div class="form-wrap">
  <a href='/sites/new_notvisited_site/<%= @city.id %>'>Add new Tourist Site</a>
</div>
