<h1 class="logo">NEW CITY </h1>


<form method="POST" action="/cities">
  <div class="form-wrap">

    <div>
      <label for="country_id" name ="country_id"><%=@country.name.capitalize %> </label>
      <input required type="radio" name ="country_id" value="<%=@country.id %>" checked/>
    </div>

    <div>
      <label for="name">City Name:</label>
      <input required type="text" name="name" minlength="3" id="city_name"/>
    </div>

    <div>
      <label for="visited">Visited:</label>
      <select required type="boolean" name="visited" id="visited">
        <option value=<%= false %>>Not visited</option>
      </select>
    </div>

    <div >
      <input type="submit" value="Add city"/>
    </div>
    </div>
</form>
